<Window x:Class="PIS8_2.MVVM.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:PIS8_2.MVVM.ViewModels"
        xmlns:views="clr-namespace:PIS8_2.MVVM.View"
        xmlns:pis82="clr-namespace:PIS8_2"
        xmlns:view="clr-namespace:PIS8_2.MVVM.View"
        mc:Ignorable="d"
        Title="MainWindow" 
        WindowState="Maximized"
        >
    <ContentControl Content="{Binding CurrentViewModel}">
        <ContentControl.Resources>
            <DataTemplate DataType="{x:Type viewModels:LoginViewModel}">
                <views:LoginView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:ReestrViewModel}">
                <views:ReestrView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:ScheduleTypeViewModel}">
                <views:ScheduleTypeView/>
            </DataTemplate>
        </ContentControl.Resources>
    </ContentControl>
</Window>
