                public string Patronymicappl { get; set; }
                public string Adressappl { get; set; }
                public string Phonenumberappl { get; set; }
                public int IdOrg { get; set; }
                public int? IdAnimal { get; set; }-->
            </DataGrid.Columns>
        </DataGrid>



    </StackPanel>
</UserControl>
