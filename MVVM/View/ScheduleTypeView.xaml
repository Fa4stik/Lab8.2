                    <TextBox Width="300" BorderThickness="0,0,0,2" Text="{Binding Card.Locality}"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Width="250" TextAlignment="Right" Text="Адрес места отлова:" FontSize="14"
                               Padding="20,0" Margin="0,20,0,0">
                    </TextBlock>
                    <TextBox Width="300" BorderThickness="0,0,0,2" Text="{Binding Card.Adresstrapping}"></TextBox>
