                                   HorizontalAlignment="Center" VerticalAlignment="Center" FontStyle="Italic">
                        </TextBlock>
                    </Border>
                    <Button Canvas.Left="240" Canvas.Top="0" Width="30" Height="30" Style="{StaticResource btn1}">
