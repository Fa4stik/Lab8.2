                        </TextBlock>
                        <TextBox Width="300" BorderThickness="0,0,0,2"></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Width="250" TextAlignment="Right" Text="ФИО:" FontSize="14" Padding="20,0"
                                   Margin="0,20,0,0">
                        </TextBlock>
                        <TextBox Width="300" BorderThickness="0,0,0,2"></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Width="250" TextAlignment="Right" Text="Телефон:" FontSize="14" Padding="20,0"
                                   Margin="0,20,0,0">
                        </TextBlock>
                        <TextBox Width="300" BorderThickness="0,0,0,2"></TextBox>
                    </StackPanel>
                </StackPanel>
            </Border>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <TextBlock Width="250" TextAlignment="Right" VerticalAlignment="Center" Text="Документ:" FontSize="14"
                           Padding="20,0" Margin="0,0,0,0">
                </TextBlock>
